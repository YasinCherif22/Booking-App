<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color60"
    tools:context=".fragment.ProfileFragment">



    <!-- ScrollView fÃ¼r den Rest der Inhalte -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingHorizontal="16dp"
            android:orientation="vertical">

            <!-- Titel, nicht vom ScrollView betroffen -->
            <TextView
                style="@style/Headline1"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:layout_gravity="center"
                android:layout_marginVertical="16dp" />

            <!-- User Information Section -->
            <LinearLayout
                android:id="@+id/userInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:id="@+id/userProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/rounded_corners_background">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/pho_user_square_fill"
                        app:tint="@color/iconColor"
                        android:contentDescription="@string/profile_picture"
                        android:layout_alignParentStart="true" />

                    <TextView
                        style="@style/Headline3"
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/profile_image"
                        android:layout_marginStart="16dp"
                        android:text="User name"
                        android:layout_marginTop="5dp" />

                    <TextView
                        style="@style/Body3"
                        android:id="@+id/profile_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_name"
                        android:layout_toEndOf="@id/profile_image"
                        android:layout_marginStart="16dp"
                        android:text="UID" />
                </RelativeLayout>

                <!-- User Login Section -->
                <RelativeLayout
                    android:id="@+id/userLogin"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="16dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/rounded_corners_background">

                    <Button
                        style="@style/Button"
                        android:id="@+id/btn_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login"
                        android:paddingVertical="13dp"
                        android:textColor="@color/textColor2"
                        android:backgroundTint="@color/color10" />
                </RelativeLayout>
            </LinearLayout>

            <!-- Account Settings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        style="@style/Headline2"
                        android:id="@+id/activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/general"
                        android:layout_marginBottom="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/activity">

                        <!-- Account Section -->
                        <RelativeLayout
                            android:id="@+id/account"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/pho_user_circle_fill"
                                app:tint="@color/iconColor"
                                android:contentDescription="@string/settings"
                                android:layout_alignParentStart="true" />

                            <TextView
                                style="@style/Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="32dp"
                                android:text="@string/my_account" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/pho_caret_right"
                                app:tint="@color/iconColor"
                                android:contentDescription="@string/settings"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>

                        <!-- Settings Section -->
                        <RelativeLayout
                            android:id="@+id/settings"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/pho_gear_fill"
                                app:tint="@color/iconColor"
                                android:contentDescription="@string/settings"
                                android:layout_alignParentStart="true" />

                            <TextView
                                style="@style/Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="32dp"
                                android:text="@string/settings" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/pho_caret_right"
                                app:tint="@color/iconColor"
                                android:contentDescription="@string/settings"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>