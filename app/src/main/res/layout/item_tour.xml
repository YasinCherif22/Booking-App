<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/garden"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:backgroundTint="@color/color30"

    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/color30"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/tour_image_holder"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp">

                <ImageView
                    android:id="@+id/tour_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_placeholder" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/tour_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    style="@style/Headline2"
                    android:id="@+id/tour_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <LinearLayout
                    android:id="@+id/star_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/pho_star_fill"
                        app:tint="@color/accentOrange"/>

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/pho_star_fill"
                        app:tint="@color/accentOrange"/>

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/pho_star_fill"
                        app:tint="@color/accentOrange"/>

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/pho_star_fill"
                        app:tint="@color/accentOrange"/>

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/pho_star_fill"
                        app:tint="@color/accentOrange"/>
                </LinearLayout>


                <TextView
                    style="@style/Body3"
                    android:id="@+id/tour_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:maxLines="1"
                    android:ellipsize="end"/>


            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:backgroundTint="@color/accentOrange"

            app:cardCornerRadius="10dp"
            app:cardElevation="50dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empfohlen"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/pho_sparkle_fill"
                    app:tint="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>